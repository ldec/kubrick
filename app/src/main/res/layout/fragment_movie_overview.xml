<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/movieOverviewContent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/movieOverviewTitleLayout"
        android:background="@color/grey"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/movie_overview_title"
            android:id="@+id/movieOverviewTitle"
            android:layout_marginLeft="@dimen/default_margin_text_view"
            android:layout_marginRight="@dimen/default_margin_text_view"
            android:textStyle="bold"
            android:textColor="@color/almost_white"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/movieOverviewTitleLayout"
        android:layout_alignLeft="@+id/movieOverviewContent"
        android:layout_alignStart="@+id/movieOverviewContent"
        android:background="@color/almost_white"
        android:id="@+id/movieOverviewContentLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/movie_overview_content"
            android:id="@+id/movieOverviewContent"
            android:layout_marginLeft="@dimen/default_margin_text_view"
            android:layout_marginRight="@dimen/default_margin_text_view"
            android:layout_marginTop="@dimen/default_margin_text_view"
            android:layout_marginBottom="@dimen/default_margin_text_view"
            android:textColor="@color/grey" />
    </LinearLayout>

</RelativeLayout>