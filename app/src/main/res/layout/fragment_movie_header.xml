<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardBackgroundColor="@android:color/black"
    android:layout_height="wrap_content"
    android:id="@+id/headerCardView"
    app:cardElevation="7dp"
    app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/moviePosterPicture"
            android:contentDescription="@string/movie_poster_picture_content_description"
            android:adjustViewBounds="true"
            android:elevation="2dp"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:src="@drawable/poster_default_placeholder" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/movieAndDateLayout"
            android:layout_above="@+id/movieDurationAndGenresLayout"
            android:layout_alignLeft="@+id/movieDurationAndGenresLayout"
            android:layout_alignStart="@+id/movieDurationAndGenresLayout"
            android:background="@color/cardview_kubrick_default_color">

            <TextView
                android:id="@+id/movieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/category_color_1"
                android:text="@string/movie_title"
                android:shadowColor="#000000"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/movieDuration"
                android:layout_toEndOf="@+id/movieDuration"
                android:layout_marginLeft="96dp"
                android:layout_marginStart="96dp" />

            <TextView
                android:id="@+id/movieReleaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/category_color_1"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/movie_release_date"
                android:textSize="15sp"
                android:shadowColor="#000000"
                android:layout_below="@+id/movieTitle"
                android:layout_alignLeft="@+id/movieTitle"
                android:layout_alignStart="@+id/movieTitle" />

            <TextView
                android:id="@+id/movieGenres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="@color/category_color_3"
                android:text="@string/movie_genres"
                android:textSize="15sp"
                android:shadowColor="#000000"
                android:layout_below="@+id/movieReleaseDate"
                android:layout_alignLeft="@+id/movieReleaseDate"
                android:layout_alignStart="@+id/movieReleaseDate" />

            <TextView
                android:id="@+id/movieDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="@color/category_color_3"
                android:text="@string/movie_duration"
                android:textSize="15sp"
                android:layout_below="@+id/movieGenres"
                android:shadowColor="#000000" />

        </RelativeLayout>

</android.support.v7.widget.CardView>