<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:fresco="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="7dp"
        android:layout_margin="0dp"
        app:cardUseCompatPadding="true"
        android:background="@color/cardview_kubrick_default_color">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_kubrick_default_color">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="267dp"
            android:layout_height="150dp"
            android:contentDescription="@string/video_thumbnail_default"
            android:padding="0dp"
            android:id="@+id/videoThumbnail"
            fresco:placeholderImage="@drawable/poster_default_placeholder"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:failureImage="@drawable/poster_default_error"
            android:layout_margin="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/credits_name_default"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:id="@+id/videoName"/>
    </LinearLayout>
</android.support.v7.widget.CardView>