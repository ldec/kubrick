<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/movieCastContent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/movieCastTitleLayout"
        android:background="@color/category_color_2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/movie_cast_title"
            android:id="@+id/movieCastTitle"
            android:layout_marginLeft="@dimen/default_margin_text_view"
            android:layout_marginRight="@dimen/default_margin_text_view"
            android:textStyle="bold"
            android:textColor="@color/category_color_1"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/movieCastTitleLayout"
        android:layout_alignLeft="@+id/movieCastContent"
        android:layout_alignStart="@+id/movieCastContent"
        android:background="@color/category_color_1"
        android:id="@+id/movieCastContentLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/movie_cast_content"
            android:id="@+id/movieCastContent"
            android:layout_marginLeft="@dimen/default_margin_text_view"
            android:layout_marginRight="@dimen/default_margin_text_view"
            android:layout_marginTop="@dimen/default_margin_text_view"
            android:layout_marginBottom="@dimen/default_margin_text_view"
            android:textColor="@color/category_color_2" />
    </LinearLayout>

</RelativeLayout>